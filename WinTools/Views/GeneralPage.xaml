<Page
    x:Class="WinTools.Views.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBox x:Name="CommandTextBox" PlaceholderText="Enter command to execute..." />
            <ComboBox x:Name="ExecutionLevelComboBox" PlaceholderText="Select execution level">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="System" />
                <ComboBoxItem Content="TrustedInstaller" />
            </ComboBox>
            <Button Content="Update Windows" Background="LightBlue" Foreground="White" x:Name="update" Click="update_Click"/>
            <Button Content="Run as..." Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
